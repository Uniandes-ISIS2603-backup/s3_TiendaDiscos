<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="VinylAppPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--Toca entity por entity, exclude-unlisted-clases = false no funciona-->
    <class>co.edu.uniandes.csw.tiendadiscos.entities.BillingInformationEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.CancionEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.CarritoDeComprasEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.ComentarioEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.EnvioEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.TarjetaCreditoEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.TransaccionEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.UsuarioEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.ViniloEntity</class>
    <class>co.edu.uniandes.csw.tiendadiscos.entities.WishListEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
 <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.target-database" value="Derby"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/tiendadiscos"/>
      <property name="javax.persistence.jdbc.user" value="APP"/>
      <property name="javax.persistence.jdbc.password" value="APP"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
